<html>
    <head>
        <title>MeriCar</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href = "/stylesheet/main.css">
           <link rel="stylesheet" type="text/css" href="public/stylesheet/main.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
         <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">      
       <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js "></script>

       <style>
            table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }
        
        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        
        tr:nth-child(even) {
            background-color: #dddddd;
        }
        
        </style>


    </head>

    <body>
        <nav class = "navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">MeriCar</a>
                </div>

                <div class="navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                       <% if(!currentUser){ %>
                            <li> <a href="/user/login"> Login </a> </li>
                            <li> <a href="/user/register"> Register </a> </li>
                       <% } else { %>
                       <% if(currentUser.usertype == "admin"){ %>
                            <li> <a href = "#"><i class="fa fa-user"></i>Welcome Admin</a></li>
                            <li> <a href="/admin/dashboard">Dashboard</a></li>
                       <% }else{ %>
                            <li> <a href = "#"><i class="fa fa-user"></i>Welcome <%= currentUser.fname %></a></li> 
                            <li> <a href="/user/dashboard">Dashboard</a></li>                           
                       <% } %>
                            <li> <a href="/user/logout"> Logout </a> </li>
                       <% } %>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="container">
            <%if(error && error.length>0){%>
            
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <%}%>
            
            <%if(success && success.length>0){%>
            
                <div class="alert alert-success" role = "alert">
                    <%= success %>
                </div>
            <%}%>
        </div>
