<% include ../partials/header %>

<% car.forEach(function(car) { %>
    <div class="container carblock">
            <div class = "row text-center carrow" style="display:flex; flex-wrap: wrap; margin-top:2%; margin-bottom:2%;" >
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="col-lg-4 cl-md-4 col-sm-4">
                            <img class="img-responsive image" src="<%= car.image %>">
                        </div>

                        <div class="col-lg-8 col-md-8 col-sm-8 details">
                            <p class> <%= car.name %></p>
                            <p> Rs. <%= car.rate %>/day</p>
                            <!-- <p> <%= car.number %></p> -->
                            <p> <%= car.city %></p>
                            <p><%= car.category %></p>
                                
                         <%   if(currentUser.usertype == "user"){  %>
                              <%  if(currentUser.blocked == false && currentUser.verified == true){ %>
                                    <a class="btn btn-warning btn-lg" href="/car/book/<%= car._id %>/<%= currentUser._id %>">
                                        Book
                                    </a>
                                    <!-- <a class="btn btn-warning btn-lg" href="/car/book/<%= car._id %>">
                                        Book
                                    </a>  -->
                              <%  } %>
                          <%  }else{ %>
                                <a class="btn btn-primary btn-lg" href="/car/edit/<%= car._id %>">
                                    Edit
                              </a>                          
                          <%  } %>         
                            </div>
                    </div>
                 
            </div>
    </div>
<% }) %>

<% include ../partials/footer %>