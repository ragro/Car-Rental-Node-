<% include ../partials/header %>

<div class="container">


    <div class="col-lg-4 col-md-4 col-sm-4">
        <div class="thumbnail">
            <img class="img-responsive" src="<%= car.image %>">
        </div>
    </div>

    <div class="col-lg-8 col-md-8 col-sm-8">
              
            <div class="form" align="center">

                    <p><h1>Check  Details</h1></p>
                    <form action="/car/bookcontinue/<%= car._id %>/<%= userdetail._id %>" method="put">
                        <div class="form-group">
                                <label for="username">
                                        User Name:
                                    </label>
                                    <div class="form-group">
                                        <input class="form-control" type="text" name="name" value="<%= userdetail.fname %>">
                                    </div>
                        </div>
            
                        <div class="form-group">
                                <label for="license">
                                        Driving License :
                                 </label>
                                    <div class="form-group">
                                        <input class="form-control" type="text" name="license" value="<%= userdetail.license %>">
                                    </div>
                        </div>
            
                        <div class="form-group">
                                <label for="carname">
                                        Car Name :
                                 </label>
                                    <div class="form-group">
                                        <input class="form-control" type="text" name="carname" value="<%= car.name %>">
                                    </div>
                        </div>
            
                        <div class="form-group">
                                <label for="price">
                                        Price:
                                 </label>
                                    <div class="form-group">
                                        <input class="form-control" type="text" name="carname" value="<%= car.rate %>">
                                    </div>
                        </div>
                          <button>Continue</button>
                    </form>
            </div>
        </div>

    </div>


 
<% include ../partials/footer %>