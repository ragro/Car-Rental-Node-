<% include ../partials/header %>

<!-- <div class="form" align="center"> -->
    <div style="width:30%; margin:25px auto;">  
        <h1 style="text-align:center;">Edit <%= car.name %> </h1>
        <div class="thumbnail">
            <img src="<%= car.image %>" height="200px" width="200px">
        </div>
    <form action="/car/<%= car._id %>?_method=PUT" method="POST">
        
            <div class="form-group">
                <div class="form-group">
                    <label for="name"> Name:</label>
                    <div class="form-group">
                        <input type="text" class="form-control" name="car[name]" value="<%= car.name %>">
                    </div>
                </div>

                <div class="form-group">
                        <label for="number"> Number: </label>
                        <div class="form-group"> 
                        <input type="text" class="form-control" name="car[number]" value="<%= car.number %>">
                        </div>
                </div>

                <div class="form-group">
                        <label for="image"> Picture: </label>
                <div class="form-group">  
                     <input type="text" class="form-control" name="car[image]" value="<%= car.image %>"> 
                </div>
                </div>

                <div class="form-group">
                            <label for="city"> City: </label>
                <div class="form-group"> 
                     <input type="text" class="form-control" name="car[city]" value="<%= car.city %>">
                </div>
                </div>

                <div class="form-group">
                        <label for="price">Rate: </label>
                    <div class="form-group"> 
                        <input type="text" class="form-control" name="car[price]" value="<%= car.rate %>">
                    </div>
                </div>

                <button class="btn btn-primary btn-lg btn-block">Update</button>
            
            </div>
            
    </form>

</div>


<% include ../partials/footer %>